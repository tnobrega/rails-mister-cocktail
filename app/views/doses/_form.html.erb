<%= simple_form_for([@cocktail, @ingredient, @dose]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.association :cocktail %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
